{
  "manifest_version": 3,
  "name": "ModelDock - Unified AI Workspace",
  "version": "1.1.0",
  "description": "Multitask with Gemini, Claude, ChatGPT and more in a unified side-by-side interface.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open ModelDock",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "net_request_rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.perplexity.ai/*"
      ],
      "js": [
        "perplexity-proxy.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}