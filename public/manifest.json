{
  "manifest_version": 3,
  "name": "ModelDock Studio - Multi-AI Testing Platform",
  "version": "1.1.2",
  "description": "A testing utility for developers and researchers to compare AI model responses locally. (Uses iframe tech for local simulation)",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "sidePanel",
    "contextMenus",
    "tabCapture",
    "offscreen"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://aistudio.google.com/*",
    "https://app.vooster.ai/*",
    "https://chat.deepseek.com/*",
    "https://chat.lmsys.org/*",
    "https://chat.mistral.ai/*",
    "https://chat.openai.com/*",
    "https://chat.qwen.ai/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://code.anthropic.com/*",
    "https://codex.openai.com/*",
    "https://copilot.github.com/*",
    "https://genspark.ai/*",
    "https://www.genspark.ai/*",
    "https://gemini.google.com/*",
    "https://github.com/*",
    "https://grok.com/*",
    "https://kimi.com/*",
    "https://kimi.moonshot.cn/*",
    "https://lmarena.ai/*",
    "https://lovable.dev/*",
    "https://openrouter.ai/*",
    "https://qwen.ai/*",
    "https://replit.com/*",
    "https://v0.app/*",
    "https://v0.dev/*",
    "https://vooster.ai/*",
    "https://x.ai/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Open ModelDock Studio",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "net_request_rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://aistudio.google.com/*",
        "https://app.vooster.ai/*",
        "https://chat.deepseek.com/*",
        "https://chat.lmsys.org/*",
        "https://chat.mistral.ai/*",
        "https://chat.openai.com/*",
        "https://chat.qwen.ai/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://code.anthropic.com/*",
        "https://codex.openai.com/*",
        "https://copilot.github.com/*",
        "https://genspark.ai/*",
        "https://www.genspark.ai/*",
        "https://gemini.google.com/*",
        "https://github.com/*",
        "https://grok.com/*",
        "https://kimi.com/*",
        "https://kimi.moonshot.cn/*",
        "https://lmarena.ai/*",
        "https://lovable.dev/*",
        "https://openrouter.ai/*",
        "https://qwen.ai/*",
        "https://replit.com/*",
        "https://v0.app/*",
        "https://v0.dev/*",
        "https://vooster.ai/*",
        "https://x.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "icon.png",
        "ai_model_dom_selectors.json"
      ],
      "matches": [
        "https://aistudio.google.com/*",
        "https://app.vooster.ai/*",
        "https://chat.deepseek.com/*",
        "https://chat.lmsys.org/*",
        "https://chat.mistral.ai/*",
        "https://chat.openai.com/*",
        "https://chat.qwen.ai/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://code.anthropic.com/*",
        "https://codex.openai.com/*",
        "https://copilot.github.com/*",
        "https://genspark.ai/*",
        "https://www.genspark.ai/*",
        "https://gemini.google.com/*",
        "https://github.com/*",
        "https://grok.com/*",
        "https://kimi.com/*",
        "https://kimi.moonshot.cn/*",
        "https://lmarena.ai/*",
        "https://lovable.dev/*",
        "https://openrouter.ai/*",
        "https://qwen.ai/*",
        "https://replit.com/*",
        "https://v0.app/*",
        "https://v0.dev/*",
        "https://vooster.ai/*",
        "https://x.ai/*"
      ]
    }
  ]
}
